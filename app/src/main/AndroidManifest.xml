<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.neu.madcourse.numad21s_archita_sundaray">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_as"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_as_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NUMAD21S_Archita_Sundaray">
        <activity android:name=".LaunchWebActivity"></activity>
        <activity android:name=".AtYourService" />
        <activity
            android:name=".Locator"
            android:configChanges="orientation|keyboard|screenSize" />
        <activity android:name=".LinkBrowser" />
        <activity
            android:name=".LinkCollector"
            android:configChanges="orientation|keyboard|screenSize" /> <!-- crashes if not present -->
        <activity
            android:name=".ClickyClicky"
            android:configChanges="orientation|keyboard|screenSize" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.NUMAD21S_Archita_Sundaray.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>